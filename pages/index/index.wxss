.banner {
  width: 100%;
}

.banner image {
  width: 100%;
}

.navbar-list {
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
}

.column {
  flex-basis: 100%;
  display: flex;
  justify-content: space-between;
}

.column:last-child {
  margin-bottom: 5px;
}

.navbar-list .navbar-item {
  flex: 1;
  height: 100px;
  margin: 5px;
  background: #000;
  text-align: center;
}

.navbar-list .navbar-item image {
  width: 100%;
  height: 100%;
}

.navbar-list .navbar-item:nth-child(2) image {
  display: inline-block;
  width: 70%;
  height: 70%;
  margin-top: 15px;
}

.nba-game {
  width: 100%;
  height: 120px;
  box-shadow: 5px 0px 1px #888888;
  text-align: center;
}

.player1, .player2, .game-score {
  display: inline-block;
  text-align: center;
}

.player-logo image {
  width: 50px;
  height: 50px;
}

.game-score {
  margin: 0 50px;
}