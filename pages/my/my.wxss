.my {
    background: rgba(0,0,0,0.5);
}

.weather-bg {
    width: 100%;
    height: 200px;
}

.weather-info {
    width: 100%;
    height: 150px;
    background: rgba(0,0,0,0.5);
    position: absolute;
    top: 0;
    left: 0;
    text-align: center;
    color: aliceblue;
    padding-top: 50px;
}

.title {
    margin-bottom: 30px;
    text-align: center;
    color: #FFF;
}

.content swiper {
    width: 100%;
    height: 340px;
    text-align: center;
}

.slide-item {
    display: inline-block;
    width: 300px;
    height: 240px;
    background: #FFF;
    border-radius: 5px;
    position: relative;
    top: 50px;
}

.slide-image {
    display: inline-block;
    width: 100px;
    height: 139px;
    margin-top: -50px;
}